<style>
/* 404 Page Specific Styles */
.broken-gear {
  filter: drop-shadow(0 4px 8px rgba(26, 38, 52, 0.2));
  animation: wobble 2s ease-in-out infinite;
}

.crack-line {
  opacity: 0.7;
  box-shadow: 0 0 4px rgba(183, 65, 14, 0.5);
}

.spark {
  animation: sparkle 1.5s ease-in-out infinite;
}

@keyframes wobble {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(2deg); }
  75% { transform: rotate(-2deg); }
}

@keyframes sparkle {
  0%, 100% { 
    opacity: 0.6; 
    transform: scale(1); 
  }
  50% { 
    opacity: 1; 
    transform: scale(1.2); 
  }
}

.nav-option a:hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.search-form input:focus {
  box-shadow: 0 0 0 3px rgba(212, 180, 131, 0.3);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .broken-gear {
    font-size: 6rem;
  }
  
  .supporting-gears .gear-decoration {
    display: none;
  }
  
  .error-code-box {
    margin-bottom: 2rem;
  }
}

/* Enhanced animations */
.animate-spin-slow {
  animation: spin 20s linear infinite;
}

.animate-spin-reverse {
  animation: spin-reverse 25s linear infinite;
}

@keyframes spin-reverse {
  from { transform: rotate(360deg); }
  to { transform: rotate(0deg); }
}

/* Steam effect for extra flair */
.broken-gear::after {
  content: '';
  position: absolute;
  top: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 4px;
  height: 4px;
  background: rgba(212, 180, 131, 0.4);
  border-radius: 50%;
  animation: steam 2s ease-in-out infinite;
}

@keyframes steam {
  0% { 
    opacity: 0.4;
    transform: translateX(-50%) translateY(0) scale(1);
  }
  50% {
    opacity: 0.2;
    transform: translateX(-50%) translateY(-15px) scale(1.5);
  }
  100% {
    opacity: 0;
    transform: translateX(-50%) translateY(-30px) scale(2);
  }
}
</style>