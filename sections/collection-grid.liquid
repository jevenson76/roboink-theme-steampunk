{% schema %}
{
  "name": "Collection Grid",
  "tag": "section",
  "class": "collection-grid-section",
  "settings": [
    {
      "id": "heading",
      "type": "text",
      "label": "Section heading",
      "default": "Explore Our Collections"
    },
    {
      "id": "subheading",
      "type": "textarea",
      "label": "Section subheading",
      "default": "Discover unique steampunk designs across our carefully curated categories"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Category title",
          "default": "Category Name"
        },
        {
          "id": "description",
          "type": "textarea",
          "label": "Category description",
          "default": "Category description"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Category image"
        },
        {
          "id": "link",
          "type": "url",
          "label": "Category link",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "RoboInk Collection Grid",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Robots",
            "description": "Mechanical beings powered by gears and creative engineering",
            "image": "ROBOTS.png",
            "link": "/collections/robots"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Vehicles",
            "description": "Fantastical transportation—airships, trains, subs, and more",
            "image": "VEHICLES.png",
            "link": "/collections/vehicles"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Clockwork Creatures",
            "description": "Animals and beasts reimagined with mechanical artistry",
            "image": "CLOCKWORK CREATURES.png",
            "link": "/collections/clockwork-creatures"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Gadgetry & Gizmos",
            "description": "Inventive gadgets, wearable tech, and playful devices",
            "image": "GADGETRY & GIZMOS.png",
            "link": "/collections/gadgetry-gizmos"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Victorian Vanguard",
            "description": "Portraits, fashion, and motifs from a classic era",
            "image": "VICTORIAN VANGUARD.png",
            "link": "/collections/victorian-vanguard"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Retro-Futurism",
            "description": "Futuristic tech and scenes imagined from the past",
            "image": "RETRO-FUTURISM.png",
            "link": "/collections/retro-futurism"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Skulls",
            "description": "Skulls and anatomy fused with gears and mechanical detail",
            "image": "SKULLS.png",
            "link": "/collections/skulls"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Typographic Treasures",
            "description": "Clever quotes and sayings in steampunk style",
            "image": "TEXT.png",
            "link": "/collections/typography"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Custom Requests",
            "description": "Bring your unique steampunk design ideas to life",
            "image": "CUSTOM.png",
            "link": "/pages/custom-requests"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="collection-grid-section py-16 md:py-24 bg-parchment relative overflow-hidden">
  <!-- Decorative Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-10 left-10 gear-decoration text-8xl text-brass">⚙</div>
    <div class="absolute top-40 right-20 gear-decoration text-6xl text-copper" style="animation-duration: 30s; animation-direction: reverse;">⚙</div>
    <div class="absolute bottom-20 left-1/4 gear-decoration text-4xl text-rust" style="animation-duration: 40s;">⚙</div>
    <div class="absolute bottom-40 right-10 gear-decoration text-5xl text-teal" style="animation-duration: 25s; animation-direction: reverse;">⚙</div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-navy mb-6">
        <span class="metallic-text">{{ section.settings.heading }}</span>
      </h2>
      <p class="text-lg md:text-xl text-navy/80 max-w-3xl mx-auto leading-relaxed">
        {{ section.settings.subheading }}
      </p>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {%- for block in section.blocks -%}
        <div class="category-card group" {{ block.shopify_attributes }}>
          <a href="{{ block.settings.link }}" class="block">
            <!-- Image Container -->
            <div class="relative overflow-hidden rounded-lg bg-navy/5 aspect-square mb-6 group-hover:shadow-2xl transition-all duration-500">
              {%- if block.settings.image != blank -%}
                <img
                  src="{{ block.settings.image | image_url: width: 600 }}"
                  alt="{{ block.settings.title }}"
                  loading="lazy"
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  width="600"
                  height="600"
                >
              {%- else -%}
                <img
                  src="{{ block.settings.title | append: '.png' | asset_url }}"
                  alt="{{ block.settings.title }}"
                  loading="lazy"
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  width="600"
                  height="600"
                >
              {%- endif -%}
              
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-navy/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              
              <!-- Hover Icon -->
              <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-4 group-hover:translate-y-0">
                <div class="bg-brass text-navy rounded-full p-4 shadow-xl">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="text-center">
              <h3 class="text-xl md:text-2xl font-heading font-bold text-navy mb-3 group-hover:text-brass transition-colors duration-300">
                {{ block.settings.title }}
              </h3>
              <p class="text-navy/70 leading-relaxed group-hover:text-navy/90 transition-colors duration-300">
                {{ block.settings.description }}
              </p>
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-16">
      <p class="text-lg text-navy/80 mb-6">
        Can't find what you're looking for?
      </p>
      <a href="/pages/custom-requests" class="btn-primary">
        Request Custom Design
      </a>
    </div>
  </div>
</section>

<style>
  .collection-grid-section {
    background: linear-gradient(135deg, var(--parchment) 0%, #f5f1ec 100%);
  }

  .category-card {
    position: relative;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--brass), var(--copper), var(--brass));
    transform: scaleX(0);
    transition: transform 0.5s ease;
    border-radius: 2px;
  }

  .category-card:hover::before {
    transform: scaleX(1);
  }

  .gear-decoration {
    animation: spin 20s linear infinite;
  }

  /* Steam particles effect */
  .category-card:hover::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100px;
    height: 100px;
    background: radial-gradient(circle, rgba(212, 180, 131, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(0);
    animation: steam-puff 0.8s ease-out;
    pointer-events: none;
    z-index: -1;
  }

  @keyframes steam-puff {
    0% {
      transform: translate(-50%, -50%) scale(0);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, -50%) scale(3);
      opacity: 0;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .collection-grid-section {
      padding: 3rem 0 4rem;
    }
    
    .gear-decoration {
      display: none;
    }
  }
</style>